<Page x:Class="ServiceYouNow.src.pages.login.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:ServiceYouNow.src.pages.login"
      mc:Ignorable="d"
      Background="White">
    <Grid>
        <!--
        -->
		<Button
            Content="←"
            FontSize="20"
            Background="#FF2596BE"
            Foreground="White"
            BorderBrush="#FF2596BE"
            BorderThickness="2"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="20"
            Width="50"
            Height="30"
            Click="BackButton_Click" />


        <StackPanel 
          VerticalAlignment="Center" 
          HorizontalAlignment="Center" 
          Margin="0,50,0,0" 
          Width="500">

            <TextBlock 
              Text="Username" 
              FontWeight="Bold" 
              FontSize="30"
              Width="400"
              Margin="0,0,0,10" />

            <TextBox 
              x:Name="UsernameBox" 
              Height="50" 
              Width="400"
              FontSize="27" />

            <TextBlock 
              Text="Password" 
              FontWeight="Bold" 
              FontSize="30"
              Width="400"
              Margin="0,20,0,10" />

            <PasswordBox 
              x:Name="PasswordBox" 
              Height="50" 
              Width="400"
              FontSize="27" />

            <TextBox 
              x:Name="VisiblePasswordBox" 
              Height="50" 
              FontSize="27"
              Width="400"
              Visibility="Collapsed" 
              IsReadOnly="True"/>

            <Button 
              Content="Save" 
              Foreground="White"
              FontWeight="Bold" 
              FontSize="26" 
              Padding="15,10" 
              Width="150" 
              Height="50" 
              Cursor="Hand" 
              Margin="0,30,0,0" 
              Click="SaveButton_Click" />
        </StackPanel>
    </Grid>
</Page>
