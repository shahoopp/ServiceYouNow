<Page x:Class="ServiceYouNow.src.pages.triagedetails.TriageDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:ServiceYouNow.src.pages.triagedetails"
      mc:Ignorable="d"
      Background="White">

    <Grid>
		<Button
            Content="←"
            FontSize="20"
            Background="#FF2596BE"
            Foreground="White"
            BorderBrush="#FF2596BE"
            BorderThickness="2"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="20"
            Width="50"
            Height="30"
            Click="BackButton_Click" />
		
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
			<TextBlock Text="Work Item Number" FontWeight="Bold" FontSize="30" Width="400" Margin="0,0,0,10" TextAlignment="Center" />
			<TextBox x:Name="WorkItemNumber" Height="50" Width="400" FontSize="27" />
			<TextBlock Text="Your Full Name" FontWeight="Bold" FontSize="30" Width="400" Margin="0,0,0,10" TextAlignment="Center" />
			<TextBox x:Name="YourFullName" Height="50" Width="400" FontSize="27" />
			<TextBlock Text="Database Access Request Numbers" FontWeight="Bold" FontSize="20" Width="400" Margin="0,20,0,10" TextAlignment="Center" />
			<TextBox x:Name="Notes" Height="300" Width="400" FontSize="20" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
			<Button x:Name="Save" Height="50" Width="100" FontSize="20" Content="Save" Margin="0,10,0,20"
                    Click="Save_Click" />
        </StackPanel>
    </Grid>
</Page>
